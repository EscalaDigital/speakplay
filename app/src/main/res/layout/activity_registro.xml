<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="340dp"
        android:layout_height="118dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/suelo2" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="132dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:srcCompat="@drawable/raton" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="230dp"
                android:layout_height="80dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/registro"
                tools:layout_editor_absoluteY="-1dp" />

            <EditText
                android:id="@+id/usuario"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Usuario"
                android:textStyle="bold"
                android:typeface="normal"
                tools:layout_editor_absoluteX="102dp"
                tools:layout_editor_absoluteY="79dp" />

            <EditText
                android:id="@+id/clave"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:text="Clave"
                android:textStyle="bold"
                android:typeface="normal"
                tools:layout_editor_absoluteX="102dp"
                tools:layout_editor_absoluteY="79dp" />


            <EditText
                android:id="@+id/nombre"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Nombre"
                android:textStyle="bold"
                android:typeface="normal"
                tools:layout_editor_absoluteX="102dp"
                tools:layout_editor_absoluteY="79dp" />

            <EditText
                android:id="@+id/apellidos"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Apellidos"
                android:textStyle="bold"
                android:typeface="normal"
                tools:layout_editor_absoluteX="102dp"
                tools:layout_editor_absoluteY="79dp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="E-mail"
                android:textStyle="bold"
                android:typeface="normal"
                tools:layout_editor_absoluteX="102dp"
                tools:layout_editor_absoluteY="79dp" />

            <EditText
                android:id="@+id/editTextNumberSigned"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:ems="10"
                android:inputType="numberSigned"
                android:text="Edad" />

            <EditText
                android:id="@+id/sexo"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Sexo"
                android:textStyle="bold"
                android:typeface="normal"
                tools:layout_editor_absoluteX="102dp"
                tools:layout_editor_absoluteY="79dp" />

            <EditText
                android:id="@+id/usuarioDiscord"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Usuario Discord"
                android:textStyle="bold"
                android:typeface="normal"
                tools:layout_editor_absoluteX="102dp"
                tools:layout_editor_absoluteY="79dp" />

            <Spinner
                android:id="@+id/selectorJuegos"
                android:layout_width="350dp"
                android:layout_height="47dp" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="TÃ©rminos de uso" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="328dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/botonregistro" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>