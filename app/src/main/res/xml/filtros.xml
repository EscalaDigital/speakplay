<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">



    <PreferenceCategory android:title="Juegos">

        <MultiSelectListPreference
            android:defaultValue="@android:array/organizationTypes"
            android:entries="@android:array/organizationTypes"
            android:entryValues="@android:array/organizationTypes"
            android:key="multi_select_juegos"
            android:title="Multi select list preference" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Jugadores">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="check_box_hombres"
            android:title="Hombres" />


        <CheckBoxPreference
            android:defaultValue="false"
            android:key="check_box_mujeres"
            android:title="Mujeres" />



        <CheckBoxPreference
            android:defaultValue="false"
            android:key="check_box_oculto"
            android:title="Oculto" />

        <SeekBarPreference
            android:key="seek_bar_minimo"
            android:title="Mínimo"
            app:showSeekBarValue="true"
            android:defaultValue="30"
            android:max="99"
            android:min="18" />

        <SeekBarPreference
            android:key="seek_bar_máximo"
            android:title="Máximo"
            app:showSeekBarValue="true"

          />

    </PreferenceCategory>

    <PreferenceCategory android:title="Distancia máxima">
        <SeekBarPreference
            android:key="seek_bar_distancia"
            android:title="Kilómetros"
            app:showSeekBarValue="true"
            android:defaultValue="30"
            android:max="99"
            android:min="18" />

    </PreferenceCategory>
</androidx.preference.PreferenceScreen>